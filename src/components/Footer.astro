---
import { siteConfig } from "../config";
import { Icon } from 'astro-icon/components'

const currentYear = new Date().getFullYear();
---

<footer class="bg-white dark:bg-gray-800 shadow-md mt-auto">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-wrap justify-between items-center">
      <div class="w-full md:w-1/3 mb-4 md:mb-0">
        <h2 class="text-xl font-bold text-primary dark:text-white mb-2">{siteConfig.title}</h2>
        <p class="text-secondary dark:text-gray-300">{siteConfig.description}</p>
      </div>
      <div class="w-full md:w-1/3 mb-4 md:mb-0">
        <h3 class="text-lg font-semibold text-primary dark:text-white mb-2">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-secondary dark:text-gray-300 hover:text-primary dark:hover:text-white transition-colors">Home</a></li>
          <li><a href="/about" class="text-secondary dark:text-gray-300 hover:text-primary dark:hover:text-white transition-colors">About</a></li>
          <li><a href="/posts" class="text-secondary dark:text-gray-300 hover:text-primary dark:hover:text-white transition-colors">Blog</a></li>
        </ul>
      </div>
      <div class="w-full md:w-1/3">
        <h3 class="text-lg font-semibold text-primary dark:text-white mb-2">Follow Us</h3>
        <div class="flex space-x-4">
          <a href="#" class="text-secondary dark:text-gray-300 hover:text-primary dark:hover:text-white transition-colors">
            <Icon class="w-6 h-6" name="mdi:twitter" />
          </a>
          <a href="#" class="text-secondary dark:text-gray-300 hover:text-primary dark:hover:text-white transition-colors">
            <Icon class="w-6 h-6" name="mdi:facebook" />
          </a>
          <a href="#" class="text-secondary dark:text-gray-300 hover:text-primary dark:hover:text-white transition-colors">
            <Icon class="w-6 h-6" name="mdi:instagram" />
          </a>
        </div>
      </div>
    </div>
    <div class="mt-8 text-center text-secondary dark:text-gray-300">
      &copy; {currentYear} {siteConfig.author}. All rights reserved.
    </div>
  </div>
</footer>
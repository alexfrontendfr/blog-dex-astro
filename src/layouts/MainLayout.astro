---
import { siteConfig, socialLinks } from "../config";
import { Icon } from 'astro-icon/components'
import BaseLayout from "./BaseLayout.astro";
import NewsletterSignup from "../components/NewsletterSignup.astro";

const { title, description, image } = Astro.props;
---

<BaseLayout {title} {description} {image}>
  <div class="container mx-auto px-4 flex flex-col md:flex-row py-8">
    <aside class="md:w-1/4 md:pr-8 mb-8 md:mb-0">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <img src={siteConfig.avatar} alt={siteConfig.author} class="w-32 h-32 rounded-full mx-auto mb-4">
        <h2 class="text-2xl font-bold text-center mb-2">{siteConfig.author}</h2>
        <p class="text-center text-gray-600 dark:text-gray-300 mb-4">{siteConfig.description}</p>
        <div class="flex justify-center space-x-4">
          {socialLinks.map(link => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-primary">
              <Icon name={link.icon} class="w-6 h-6" />
            </a>
          ))}
        </div>
        <NewsletterSignup class="mt-6" />
      </div>
    </aside>
    <main class="md:w-3/4">
      <slot />
    </main>
  </div>
</BaseLayout>